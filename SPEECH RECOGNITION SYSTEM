String command="";

void setup()
{
  pinMode(2,OUTPUT);
  pinMode(3,OUTPUT);
  Serial.begin(9600);
  
  Serial.println("VOICE CONTROL AUTOMATION ");
  Serial.println("command");
  Serial.println("light on/light off");
  Serial.println("buzzer on/buzzer off");
}
void loop()
{
  if(Serial.available())
  {
    command = Serial.readStringUntil('\n');
    command.trim();
    if(command=="light on")
    {
      digitalWrite (2,HIGH);
      Serial.println("Light ON");
    }
    else if (command=="light off")
    {
      digitalWrite(2,LOW);
      Serial.println("Light OFF");
    }
    else if (command=="buzzer on")
    {
      digitalWrite(3,HIGH);
      Serial.println("Buzzer ON");
    }
    else if (command=="buzzer off")
     {
               digitalWrite(3,LOW);
               Serial.println("Buzzer OFF");
             }
    
             else
             {
               Serial.println("unknown command");
             }
             }
}

             
               
          
